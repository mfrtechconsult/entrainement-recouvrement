<odoo>
    <data noupdate="1">
        <record id="email_template_informer_crediteur" model="mail.template">
            <field name="name">Informer le créancier</field>
            <field name="model_id" ref="recouvrement.model_recouvrement_dossier"/>
            <field name="subject">Prise en charge du dossier {{ object.name }}</field>
            <field name="email_from">{{ user.email }}</field>
            <field name="email_to">{{ object.crediteur_id.email }}</field>
            <field name="body_html">
                <![CDATA[
                    <p>Bonjour <t t-out="object.crediteur_id.name"/>,</p>
                    <p>Nous vous informons que le dossier <t t-out="object.name"/> a été pris en charge.</p>
                    <p>Détails du dossier :</p>
                    <ul>
                        <li>Débiteur : <t t-out="object.debiteur_id.name"/></li>
                        <li>Montant total dû : <t t-out="object.montant"/> €</li>
                        <li>Date de création : <t t-out="object.date_creation"/></li>
                    </ul>
                    <p>Cordialement,</p>
                    <p><t t-out="user.name"/></p>
                ]]>
            </field>
        </record>

        <record id="email_template_information_paiement" model="mail.template">
            <field name="name">Information du paiement</field>
            <field name="model_id" ref="recouvrement.model_recouvrement_dossier"/>
            <field name="subject">[#{{ object.name }}] Réception d'un paiement</field>
            <field name="email_from">{{ user.email }}</field>
            <field name="email_to">{{ object.crediteur_id.email }}</field>
            <field name="body_html">
                <![CDATA[
                    <p>Bonjour <t t-out="object.crediteur_id.name"/>,</p>
                    <p>Nous vous informons avoir reçu un paiement pour le dossier <t t-out="object.name"/>.</p>
                    <p>Nous allons prochainement vous virer les fonds.</p>
                    <p>Rappel des informations importantes du dossier :</p>
                    <ul>
                        <li>Débiteur : <t t-out="object.debiteur_id.name"/></li>
                        <li>Montant total dû : <t t-out="object.montant"/> €</li>
                        <li>Date de création : <t t-out="object.date_creation"/></li>
                    </ul>
                    <p>Cordialement,</p>
                    <p><t t-out="user.name"/></p>
                ]]>
            </field>
        </record>

        <record id="email_template_recherche_paiement" model="mail.template">
            <field name="name">Recherche du paiement</field>
            <field name="model_id" ref="recouvrement.model_recouvrement_dossier"/>
            <field name="subject">[#{{ object.name }}] Recherche d'un paiement</field>
            <field name="email_from">{{ user.email }}</field>
            <field name="email_to">{{ object.crediteur_id.email }}</field>
            <field name="body_html">
                <![CDATA[
                    <p>Bonjour <t t-out="object.crediteur_id.name"/>,</p>
                    <p>Le débiteur <t t-out="object.debiteur_id.name"/> nous indique vous avoir régler une partie ou la totalité de la somme. Pouvez-vous vérifier cela ?</p>
                    <p>Rappel des informations importantes du dossier :</p>
                    <ul>
                        <li>Débiteur : <t t-out="object.debiteur_id.name"/></li>
                        <li>Montant total dû : <t t-out="object.montant"/> €</li>
                        <li>Date de création : <t t-out="object.date_creation"/></li>
                    </ul>
                    <p>Cordialement,</p>
                    <p><t t-out="user.name"/></p>
                ]]>
            </field>
        </record>
    </data>
</odoo>
