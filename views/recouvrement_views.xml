<odoo>
    <data>
        <record id="action_recouvrement_dossier" model="ir.actions.act_window">
            <field name="name">Dossiers</field>
            <field name="res_model">recouvrement.dossier</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="recouvrement_menu" name="Recouvrement" sequence="10"/>
        <menuitem id="menu_recouvrement_dossier" name="Dossiers" parent="recouvrement_menu" action="action_recouvrement_dossier"/>

        <record id="view_dossier_form" model="ir.ui.view">
            <field name="name">recouvrement.dossier.form</field>
            <field name="model">recouvrement.dossier</field>
            <field name="arch" type="xml">
                <form string="Dossier de recouvrement">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="crediteur_id"/>
                            <field name="debiteur_id"/>
                            <field name="date_creation"/>
                            <field name="date_cloture"/>
                            <field name="status"/>
                            <field name="montant"/>
                            <field name="montant_recouvre"/>
                        </group>
                        <notebook>
                            <page string="Factures">
                                <field name="factures_ids">
                                    <tree string="Factures">
                                        <field name="name"/>
                                        <field name="montant"/>
                                        <field name="date_facture"/>
                                        <field name="date_echeance"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Paiements">
                                <field name="paiements_ids">
                                    <tree string="Paiements">
                                        <field name="name"/>
                                        <field name="montant"/>
                                        <field name="date_paiement"/>
                                        <field name="moyen_paiement"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_dossier_tree" model="ir.ui.view">
            <field name="name">recouvrement.dossier.tree</field>
            <field name="model">recouvrement.dossier</field>
            <field name="arch" type="xml">
                <tree string="Dossiers de recouvrement" decoration-muted="not active">
                    <field name="name"/>
                    <field name="crediteur_id"/>
                    <field name="debiteur_id"/>
                    <field name="date_creation"/>
                    <field name="status"/>
                    <field name="montant"/>
                    <field name="montant_recouvre"/>
                    <field name="next_action_date"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
