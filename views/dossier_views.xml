<odoo>
    <record id="view_dossier_form" model="ir.ui.view">
        <field name="name">recouvrement.dossier.form</field>
        <field name="model">recouvrement.dossier</field>
        <field name="arch" type="xml">
            <form string="Dossier de recouvrement">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="crediteur_id"/>
                        <field name="debiteur_id"/>
                        <field name="montant"/>
                        <field name="date_creation"/>
                        <field name="date_cloture"/>
                        <field name="status"/>
                    </group>
                    <notebook>
                        <page string="Actions">
                            <field name="actions_ids">
                                <tree string="Actions">
                                    <field name="date_action"/>
                                    <field name="type_action"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Factures">
                            <field name="factures_ids">
                                <tree string="Factures">
                                    <field name="name"/>
                                    <field name="montant"/>
                                    <field name="date_facture"/>
                                    <field name="date_echeance"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Paiements">
                            <field name="paiements_ids">
                                <tree string="Paiements">
                                    <field name="name"/>
                                    <field name="montant"/>
                                    <field name="date_paiement"/>
                                    <field name="moyen_paiement"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dossier_tree" model="ir.ui.view">
        <field name="name">recouvrement.dossier.tree</field>
        <field name="model">recouvrement.dossier</field>
        <field name="arch" type="xml">
            <tree string="Dossiers de recouvrement">
                <field name="name"/>
                <field name="crediteur_id"/>
                <field name="debiteur_id"/>
                <field name="montant"/>
                <field name="date_creation"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
</odoo>
